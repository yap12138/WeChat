<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/di_img_thumb"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp" />

    <TextView
        android:id="@+id/di_tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/di_img_thumb"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_toEndOf="@id/di_img_thumb"
        android:layout_toStartOf="@id/di_tv_time"
        android:gravity="center_vertical"
        android:paddingStart="10dp"
        android:paddingTop="2dp"
        android:text="何增杰"
        android:singleLine="true"
        android:textColor="@color/colorElectromagnetic"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/di_tv_msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/di_img_thumb"
        android:layout_toEndOf="@id/di_img_thumb"
        android:layout_marginStart="8dp"
        android:gravity="center_vertical"
        android:paddingStart="10dp"
        android:text="消息"
        android:singleLine="true"
        android:textColor="@color/colorInnuendo"/>

    <TextView
        android:id="@+id/di_tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/di_img_thumb"
        android:gravity="center_vertical"
        android:text="上午 11：35"
        android:textSize="12sp"
        android:textColor="@color/colorInnuendo"/>
</RelativeLayout>