<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:id="@+id/ia_layout_root"
android:paddingBottom="@dimen/activity_vertical_margin"
android:paddingLeft="@dimen/activity_horizontal_margin"
android:paddingRight="@dimen/activity_horizontal_margin"
android:paddingTop="@dimen/activity_vertical_margin"
tools:context=".activity.IndividualActivity">

<RelativeLayout
    android:id="@+id/ia_layout_thumb"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ia_tv1"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:textSize="18sp"
        android:text="头像" />
    <ImageView
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:paddingTop="10dp"
        android:layout_marginBottom="10dp"
        android:id="@+id/ia_iv_thumb"
        android:layout_alignParentEnd="true"
        />
</RelativeLayout>

<RelativeLayout
    android:id="@+id/ia_layout_name"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="25dp"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="25dp"
    android:layout_below="@+id/ia_layout_thumb">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ia_tv2"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:textSize="18sp"
        android:text="昵称" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ia_tv_nickname"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@id/ia_tv2"
        android:layout_marginStart="20dp"
        android:textAlignment="textEnd"
        android:singleLine="true"/>
</RelativeLayout>

<RelativeLayout
    android:id="@+id/ia_layout_desc"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="25dp"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="25dp"
    android:layout_below="@+id/ia_layout_name">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ia_tv3"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:textSize="18sp"
        android:text="个性签名" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ia_tv_desc"
        android:layout_toEndOf="@id/ia_tv3"
        android:layout_marginStart="20dp"
        android:textAlignment="viewEnd"
        android:singleLine="true"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true" />
</RelativeLayout>
</RelativeLayout>
